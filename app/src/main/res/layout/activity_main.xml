<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保龄球记分板0.01"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv" android:textSize="30sp" app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.15"/>
    <Button android:layout_width="131dp" android:layout_height="wrap_content"
            android:id="@+id/bt1"
            android:text="开始比赛" android:onClick="selectGroup"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.172"/>
    <RadioGroup
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tv"
            android:id="@+id/radioGroup" android:layout_marginTop="128dp" app:layout_constraintHorizontal_bias="0.497">


        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="单人赛"
                     android:textSize="18sp"
        android:id="@+id/one"/>
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="双人赛"
                     android:textSize="18sp"
        android:id="@+id/two"/>
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="三人赛"
                     android:textSize="18sp"
        android:id="@+id/three"/>
        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="五人赛"
                     android:textSize="18sp"
        android:id="@+id/five"/>


    </RadioGroup>

</android.support.constraint.ConstraintLayout>